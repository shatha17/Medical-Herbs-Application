<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryTint_9"
    tools:context=".Edit_userprofile">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        style="@style/Widget.MaterialComponents.ActionBar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:fitsSystemWindows="true"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/arrow_back"
            app:navigationIconColor="@color/PrimaryShade_4"
            app:title="@string/edit_profile"
            app:titleTextColor="@color/PrimaryShade_4"
            tools:ignore="ExtraText">

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image2"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginBottom="37dp"
        android:background="@color/cardview_light_background"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248"
        app:shapeAppearanceOverlay="@style/Circular"
        app:srcCompat="@drawable/sign_rose"
        app:strokeColor="#4CAF50"
        app:strokeWidth="2dp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editProfilePhoto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:layout_weight="0.6"
        android:tint="#FFFFFF"
        app:fabSize="mini"
        app:backgroundTint="#00A79B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_photo_camera_24"
        app:tint="@color/cardview_light_background"
        tools:ignore="MissingConstraints,VectorDrawableCompat">


    </com.google.android.material.floatingactionbutton.FloatingActionButton>


    <Button
        android:id="@+id/updateProfile2"
        android:layout_width="347dp"
        android:layout_height="54dp"
        android:background="#00A79B"
        android:text="@string/update_profile"
        android:textColor="#ffffff"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927" />

    <View
        android:id="@+id/view3"
        android:layout_width="369dp"
        android:layout_height="212dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="80dp"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayout"
        style="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint="@string/username"
        app:endIconMode="clear_text"
        app:endIconTint="#272626"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.072"
        app:startIconDrawable="@drawable/user"
        app:startIconTint="#272626"
        app:shapeAppearance="@style/Cut"

        tools:ignore="MissingClass,MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newUsername1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:inputType="text"

            android:textColor="@android:color/background_dark" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayout1"
        style="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint="@string/email"
        app:endIconMode="clear_text"
        app:endIconTint="#272626"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextInputLayout"
        app:layout_constraintVertical_bias="0.036"
        app:startIconDrawable="@drawable/mail"
        app:startIconTint="#272626"
        tools:ignore="MissingClass">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_editProfile"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:hint="email"
            android:inputType="text"
            android:textColor="@android:color/background_dark" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>