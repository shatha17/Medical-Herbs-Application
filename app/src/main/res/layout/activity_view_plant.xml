<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#73AC76"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".view_plant">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/arrow_back"
                tools:ignore="VectorDrawableCompat"
                app:tint="@color/PrimaryShade_10" />

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image_plant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.034"
                    app:srcCompat="@drawable/catnip" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/plant_name"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-black"

                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />
                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="description"
                        android:textSize="16dp"
                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-black"
                        android:textSize="16dp"

                        android:text="@string/symptoms"
                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintHorizontal_bias="0.265"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />

                    <TextView
                        android:id="@+id/symptom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="symptom"
                        android:textSize="16dp"
                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintHorizontal_bias="0.265"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-black"
                        android:textSize="16dp"

                        android:text="@string/parts"
                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintHorizontal_bias="0.265"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />

                    <TextView
                        android:id="@+id/parts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="paers"
                        android:textSize="16dp"
                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintHorizontal_bias="0.265"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-black"
                        android:textSize="16dp"

                        android:text="@string/Place_origin"
                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintHorizontal_bias="0.265"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="location"
                        android:textSize="16dp"
                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintHorizontal_bias="0.265"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/did"
                        android:textSize="16dp"
                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintHorizontal_bias="0.265"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />
                    <TextView
                        android:id="@+id/information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="information"
                        android:textSize="16dp"

                        android:textColor="@color/PrimaryShade_6"
                        app:layout_constraintEnd_toEndOf="@+id/view6"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/update"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="@string/update"
                            android:background="#73AC76"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <Button
                            android:id="@+id/delete"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/delete"
                            android:background="#73AC76"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/facebook" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/twitter" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>