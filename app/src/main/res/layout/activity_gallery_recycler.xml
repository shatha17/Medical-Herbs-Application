<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SecondaryTint_9"
    tools:context=".gallery_recycler"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/back11"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/arrow_back"
        tools:ignore="VectorDrawableCompat"
        app:tint="@color/PrimaryShade_9" />

    <ImageView
        android:id="@+id/coverImg"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        app:srcCompat="@drawable/flower" />

    <TextView
        android:id="@+id/intentMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="30dp"
        android:textColor="@color/PrimaryShade_9"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/PrimaryShade_9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intentMsg"
        app:layout_constraintVertical_bias="1.0" />




</LinearLayout>